			button(class="bg-[#00ADB5] text-white py-2 px-4 font-semibold") Get Started

	div(class="flex mx-0 lg:mx-36 gap-20")
		aside(class="base-1/3 mt-10")
			span asdasdasd
		
		main(class="flex flex-col w-full")     
			h1(class="text-3xl font-semibold mb-10") Documentation  

			p(class="text-lg") asdasdsad

			pre(class="border border-gray-500 rounded-lg bg-gray-200 p-3")
				code asd
			

	script(src="../js/styles/main.js") 